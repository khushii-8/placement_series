#include <bits/stdc++.h>
using namespace std;

struct Node {
    int data;
    Node *left, *right;
    Node(int val) { data = val; left = right = NULL; }
};

// ðŸ”¹ Insert into BST
Node* insertBST(Node* root, int val) {
    if(!root) return new Node(val);
    if(val < root->data) root->left = insertBST(root->left, val);
    else root->right = insertBST(root->right, val);
    return root;
}

// ðŸ”¹ Inorder Traversal (Sorted Output for BST)
void inorder(Node* root) {
    if(!root) return;
    inorder(root->left);
    cout << root->data << " ";
    inorder(root->right);
}

// ðŸ”¹ Check Valid BST
bool isValidBST(Node* root, long long minVal = LLONG_MIN, long long maxVal = LLONG_MAX) {
    if(!root) return true;
    if(root->data <= minVal || root->data >= maxVal) return false;
    return isValidBST(root->left, minVal, root->data) &&
           isValidBST(root->right, root->data, maxVal);
}

int main() {
    Node* root = NULL;
    root = insertBST(root, 5);
    insertBST(root, 3);
    insertBST(root, 7);
    insertBST(root, 2);
    insertBST(root, 4);
    insertBST(root, 6);

    cout << "Inorder Traversal (Sorted): ";
    inorder(root); cout << endl;

    cout << "Is Valid BST: " << (isValidBST(root) ? "Yes" : "No") << endl;
}
