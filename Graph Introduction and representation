#include <bits/stdc++.h>
using namespace std;

int main() {
    int n = 5; // number of vertices
    vector<pair<int,int>> edges = {{0,1},{0,2},{1,3},{2,4}}; // example edges

    // ğŸ”¹ 1ï¸âƒ£ Adjacency Matrix
    vector<vector<int>> adjMat(n, vector<int>(n, 0));
    for(auto &e : edges){
        adjMat[e.first][e.second] = 1;
        adjMat[e.second][e.first] = 1; // undirected
    }

    cout << "Adjacency Matrix:\n";
    for(auto &row : adjMat){
        for(int val : row) cout << val << " ";
        cout << "\n";
    }

    // ğŸ”¹ 2ï¸âƒ£ Adjacency List
    vector<vector<int>> adjList(n);
    for(auto &e : edges){
        adjList[e.first].push_back(e.second);
        adjList[e.second].push_back(e.first);
    }

    cout << "\nAdjacency List:\n";
    for(int i=0;i<n;i++){
        cout << i << " -> ";
        for(int v : adjList[i]) cout << v << " ";
        cout << "\n";
    }
}
