#include <bits/stdc++.h>
using namespace std;

// 1️⃣ Unique Path I
int pathM(int i,int j,vector<vector<int>>&dp){
    if(i==0&&j==0) return 1; if(i<0||j<0) return 0;
    if(dp[i][j]!=-1) return dp[i][j];
    return dp[i][j]=pathM(i-1,j,dp)+pathM(i,j-1,dp);
}
int pathT(int n,int m){
    vector<vector<int>>dp(n,vector<int>(m,1));
    for(int i=1;i<n;i++) for(int j=1;j<m;j++) dp[i][j]=dp[i-1][j]+dp[i][j-1];
    return dp[n-1][m-1];
}

// 2️⃣ Unique Path II (with obstacles)
int pathObs(vector<vector<int>>&g){
    int n=g.size(),m=g[0].size(); vector<vector<int>>dp(n,vector<int>(m));
    if(g[0][0]==1) return 0; dp[0][0]=1;
    for(int i=0;i<n;i++) for(int j=0;j<m;j++) if(!g[i][j]){
        if(i>0) dp[i][j]+=dp[i-1][j];
        if(j>0) dp[i][j]+=dp[i][j-1];
    }
    return dp[n-1][m-1];
}

// 3️⃣ Minimum Path Sum
int minPathM(int i,int j,vector<vector<int>>&g,vector<vector<int>>&dp){
    if(i==0&&j==0) return g[0][0];
    if(i<0||j<0) return 1e9;
    if(dp[i][j]!=-1) return dp[i][j];
    return dp[i][j]=g[i][j]+min(minPathM(i-1,j,g,dp),minPathM(i,j-1,g,dp));
}
int minPathT(vector<vector<int>>g){
    int n=g.size(),m=g[0].size(); vector<vector<int>>dp(n,vector<int>(m,g[0][0]));
    for(int i=0;i<n;i++) for(int j=0;j<m;j++){
        if(i==0&&j==0) continue;
        int up=i?dp[i-1][j]:1e9, left=j?dp[i][j-1]:1e9;
        dp[i][j]=g[i][j]+min(up,left);
    }
    return dp[n-1][m-1];
}

// 4️⃣ Target Sum Subset
bool subset(vector<int>&a,int t){
    int n=a.size(); vector<vector<int>>dp(n+1,vector<int>(t+1,0));
    dp[0][0]=1;
    for(int i=1;i<=n;i++)
        for(int j=0;j<=t;j++)
            dp[i][j]=dp[i-1][j]||(j>=a[i-1]&&dp[i-1][j-a[i-1]]);
    return dp[n][t];
}

int main(){
    int n=3,m=3; vector<vector<int>>dp(n,vector<int>(m,-1));
    cout<<"UniquePaths:"<<pathM(n-1,m-1,dp)<<" "<<pathT(n,m)<<"\n";
    vector<vector<int>>g={{0,0,0},{0,1,0},{0,0,0}};
    cout<<"PathObs:"<<pathObs(g)<<"\n";
    vector<vector<int>>grid={{1,3,1},{1,5,1},{4,2,1}};
    vector<vector<int>>d(grid.size(),vector<int>(grid[0].size(),-1));
    cout<<"MinPath:"<<minPathM(n-1,m-1,grid,d)<<" "<<minPathT(grid)<<"\n";
    vector<int>a={1,2,3,7}; int target=6;
    cout<<"TargetSubset:"<<subset(a,target);
}
