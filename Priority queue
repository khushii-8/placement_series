#include <bits/stdc++.h>
using namespace std;

int main() {
    // ğŸ”¹ Max Heap (default)
    priority_queue<int> maxHeap;
    maxHeap.push(10);
    maxHeap.push(30);
    maxHeap.push(20);

    cout << "Max Heap: ";
    while(!maxHeap.empty()) {
        cout << maxHeap.top() << " "; // prints in descending order
        maxHeap.pop();
    }
    cout << endl;

    // ğŸ”¹ Min Heap
    priority_queue<int, vector<int>, greater<int>> minHeap;
    minHeap.push(10);
    minHeap.push(30);
    minHeap.push(20);

    cout << "Min Heap: ";
    while(!minHeap.empty()) {
        cout << minHeap.top() << " "; // prints in ascending order
        minHeap.pop();
    }
    cout << endl;

    return 0;
}
