#include <bits/stdc++.h>
using namespace std;

struct Node {
    int data;
    Node *left, *right;
    Node(int val) { data = val; left = right = NULL; }
};

// ðŸ”¹ Diameter of Tree (max path length between two nodes)
int height(Node* root, int &diam) {
    if(!root) return 0;
    int l = height(root->left, diam);
    int r = height(root->right, diam);
    diam = max(diam, l + r);
    return 1 + max(l, r);
}
int diameter(Node* root) {
    int diam = 0;
    height(root, diam);
    return diam;
}

// ðŸ”¹ Path Sum (check if root-to-leaf sum = target)
bool hasPathSum(Node* root, int target) {
    if(!root) return false;
    if(!root->left && !root->right) return target == root->data;
    return hasPathSum(root->left, target - root->data) ||
           hasPathSum(root->right, target - root->data);
}

// ðŸ”¹ Left View (first node of each level)
void leftView(Node* root) {
    if(!root) return;
    queue<Node*> q; q.push(root);
    while(!q.empty()) {
        int n = q.size();
        for(int i=0;i<n;i++) {
            Node* cur = q.front(); q.pop();
            if(i==0) cout << cur->data << " ";
            if(cur->left) q.push(cur->left);
            if(cur->right) q.push(cur->right);
        }
    }
}

// ðŸ”¹ Right View (last node of each level)
void rightView(Node* root) {
    if(!root) return;
    queue<Node*> q; q.push(root);
    while(!q.empty()) {
        int n = q.size();
        for(int i=0;i<n;i++) {
            Node* cur = q.front(); q.pop();
            if(i==n-1) cout << cur->data << " ";
            if(cur->left) q.push(cur->left);
            if(cur->right) q.push(cur->right);
        }
    }
}

int main() {
    Node* root = new Node(1);
    root->left = new Node(2);
    root->right = new Node(3);
    root->left->left = new Node(4);
    root->left->right = new Node(5);
    root->right->right = new Node(6);

    cout << "Diameter: " << diameter(root) << endl;
    cout << "Has Path Sum (8): " << (hasPathSum(root, 8) ? "Yes" : "No") << endl;
    cout << "Left View: "; leftView(root); cout << endl;
    cout << "Right View: "; rightView(root); cout << endl;
}
