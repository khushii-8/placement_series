#include <bits/stdc++.h>
using namespace std;

// ✅ Dijkstra
vector<int> dijkstra(int n, vector<vector<pair<int,int>>>& g,int s){
    vector<int> d(n,1e9); d[s]=0;
    priority_queue<pair<int,int>,vector<pair<int,int>>,greater<>> pq; pq.push({0,s});
    while(!pq.empty()){
        auto [dist,u]=pq.top(); pq.pop();
        for(auto [v,w]:g[u]) if(d[v]>dist+w){ d[v]=dist+w; pq.push({d[v],v}); }
    } return d;
}

// ✅ Bellman-Ford
vector<int> bellman(int n, vector<vector<int>>& e,int s){
    vector<int> d(n,1e9); d[s]=0;
    for(int i=0;i<n-1;i++)
        for(auto &x:e) if(d[x[0]]+x[2]<d[x[1]]) d[x[1]]=d[x[0]]+x[2];
    return d;
}

int main(){
    vector<vector<pair<int,int>>> g={{ {1,4},{2,1} },{{3,1}},{{1,2},{3,5}},{}};
    for(int x:dijkstra(4,g,0)) cout<<x<<" "; cout<<"\n";

    vector<vector<int>> e={{0,1,4},{0,2,1},{2,1,2},{1,3,1},{2,3,5}};
    for(int x:bellman(4,e,0)) cout<<x<<" ";
}
