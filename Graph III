#include <bits/stdc++.h>
using namespace std;

void dfs(int u, vector<vector<int>>& g, vector<int>& vis){
    vis[u]=1;
    for(int v:g[u]) if(!vis[v]) dfs(v,g,vis);
}

bool cycle(int u, int p, vector<vector<int>>& g, vector<int>& vis){
    vis[u]=1;
    for(int v:g[u]){
        if(!vis[v]) if(cycle(v,u,g,vis)) return true;
        else if(v!=p) return true;
    }
    return false;
}

int main(){
    int n=5;
    vector<vector<int>> g={{1},{0,2},{1,3},{2,4},{3}}; // 0-1-2-3-4

    // ðŸ”¹ Connected Components
    vector<int> vis(n,0); int cnt=0;
    for(int i=0;i<n;i++) if(!vis[i]){ dfs(i,g,vis); cnt++; }
    cout<<"Connected Components: "<<cnt<<"\n";

    // ðŸ”¹ Cycle Detection
    fill(vis.begin(),vis.end(),0);
    bool hasCycle=false;
    for(int i=0;i<n;i++) if(!vis[i] && cycle(i,-1,g,vis)) hasCycle=true;
    cout<<(hasCycle?"Cycle Found":"No Cycle");
}
