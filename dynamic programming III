#include <bits/stdc++.h>
using namespace std;

// 1️⃣ House Robber
int robM(int i, vector<int>&a, vector<int>&dp){
    if(i<0) return 0;
    if(dp[i]!=-1) return dp[i];
    return dp[i]=max(a[i]+robM(i-2,a,dp), robM(i-1,a,dp));
}
int robT(vector<int>&a){
    int n=a.size(); vector<int>dp(n); dp[0]=a[0];
    for(int i=1;i<n;i++) dp[i]=max(dp[i-1], a[i]+(i>1?dp[i-2]:0));
    return dp[n-1];
}

// 2️⃣ House Robber II (circular)
int robII(vector<int>&a){
    if(a.size()==1) return a[0];
    auto sub=[&](int l,int r){
        vector<int>dp(r-l+1); dp[0]=a[l];
        for(int i=1;i<r-l+1;i++)
            dp[i]=max(dp[i-1], a[l+i]+(i>1?dp[i-2]:0));
        return dp.back();
    };
    return max(sub(0,a.size()-2), sub(1,a.size()-1));
}

// 3️⃣ Goldmine (max gold from left→right)
int goldM(int i,int j,vector<vector<int>>&g,vector<vector<int>>&dp){
    int n=g.size(), m=g[0].size();
    if(i<0||i>=n||j>=m) return 0;
    if(dp[i][j]!=-1) return dp[i][j];
    int r=goldM(i,j+1,g,dp), ru=goldM(i-1,j+1,g,dp), rd=goldM(i+1,j+1,g,dp);
    return dp[i][j]=g[i][j]+max({r,ru,rd});
}
int goldT(vector<vector<int>> g){
    int n=g.size(), m=g[0].size(); vector<vector<int>>dp(n,vector<int>(m));
    for(int j=m-1;j>=0;j--)
        for(int i=0;i<n;i++){
            int r=(j==m-1)?0:dp[i][j+1];
            int ru=(i==0||j==m-1)?0:dp[i-1][j+1];
            int rd=(i==n-1||j==m-1)?0:dp[i+1][j+1];
            dp[i][j]=g[i][j]+max({r,ru,rd});
        }
    int ans=0; for(int i=0;i<n;i++) ans=max(ans,dp[i][0]);
    return ans;
}

// 4️⃣ Path with Maximum Gold (DFS + Backtrack)
int dfs(vector<vector<int>>&g,int i,int j){
    if(i<0||j<0||i>=g.size()||j>=g[0].size()||!g[i][j]) return 0;
    int val=g[i][j]; g[i][j]=0;
    int gold=val+max({dfs(g,i+1,j),dfs(g,i-1,j),dfs(g,i,j+1),dfs(g,i,j-1)});
    g[i][j]=val; return gold;
}
int getMaxGold(vector<vector<int>> g){
    int ans=0; for(int i=0;i<g.size();i++)
        for(int j=0;j<g[0].size();j++)
            ans=max(ans,dfs(g,i,j));
    return ans;
}

