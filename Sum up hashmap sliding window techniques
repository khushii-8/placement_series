#include <bits/stdc++.h>
using namespace std;

// ðŸ”¹ Find All Anagrams in a String
vector<int> findAnagrams(string s, string p) {
    vector<int> res;
    if(s.size() < p.size()) return res;

    vector<int> cntS(26, 0), cntP(26, 0);
    for(char c : p) cntP[c - 'a']++;

    for(int i = 0; i < s.size(); i++) {
        cntS[s[i] - 'a']++;
        if(i >= p.size()) cntS[s[i - p.size()] - 'a']--;
        if(cntS == cntP) res.push_back(i - p.size() + 1);
    }
    return res;
}

// ðŸ”¹ Check if Two Strings are Isomorphic
bool isIsomorphic(string s, string t) {
    if(s.size() != t.size()) return false;
    vector<int> mapS(256, -1), mapT(256, -1);
    for(int i = 0; i < s.size(); i++) {
        if(mapS[s[i]] != mapT[t[i]]) return false;
        mapS[s[i]] = mapT[t[i]] = i;
    }
    return true;
}

int main() {
    string s = "cbaebabacd", p = "abc";
    auto res = findAnagrams(s, p);
    cout << "Anagram indices: ";
    for(int x : res) cout << x << " ";
    cout << endl;

    string a = "egg", b = "add";
    cout << "Are Isomorphic: " << (isIsomorphic(a, b) ? "Yes" : "No") << endl;

    return 0;
}
