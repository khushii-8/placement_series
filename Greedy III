#include <bits/stdc++.h>
using namespace std;

// üîπ 1Ô∏è‚É£ Max Chunks To Make Sorted
int maxChunksToSorted(vector<int>& arr) {
    int chunks=0, maxNum=0;
    for(int i=0;i<arr.size();i++){
        maxNum=max(maxNum,arr[i]);
        if(maxNum==i) chunks++;
    }
    return chunks;
}

// üîπ 2Ô∏è‚É£ Max Chunks To Make Sorted II
int maxChunksToSorted2(vector<int>& arr) {
    vector<int> sorted=arr;
    sort(sorted.begin(),sorted.end());
    long long sum1=0,sum2=0,chunks=0;
    for(int i=0;i<arr.size();i++){
        sum1+=arr[i]; sum2+=sorted[i];
        if(sum1==sum2) chunks++;
    }
    return chunks;
}

// üîπ 3Ô∏è‚É£ 0/1 Knapsack
int knapSack(int W, vector<int>& wt, vector<int>& val){
    int n=wt.size();
    vector<vector<int>> dp(n+1, vector<int>(W+1,0));
    for(int i=1;i<=n;i++){
        for(int w=1;w<=W;w++){
            if(wt[i-1]<=w)
                dp[i][w]=max(val[i-1]+dp[i-1][w-wt[i-1]], dp[i-1][w]);
            else dp[i][w]=dp[i-1][w];
        }
    }
    return dp[n][W];
}

int main(){
    vector<int> a={1,0,2,3,4};
    cout<<"Max Chunks I: "<<maxChunksToSorted(a)<<"\n";

    vector<int> b={2,1,3,4,4};
    cout<<"Max Chunks II: "<<maxChunksToSorted2(b)<<"\n";

    vector<int> wt={1,3,4,5}, val={1,4,5,7};
    cout<<"0/1 Knapsack: "<<knapSack(7,wt,val)<<"\n";
}
