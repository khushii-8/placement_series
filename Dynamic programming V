#include <bits/stdc++.h>
using namespace std;

// 1️⃣ Longest Common Subsequence
int LCSrec(string a,string b,int i,int j){
    if(i<0||j<0) return 0;
    if(a[i]==b[j]) return 1+LCSrec(a,b,i-1,j-1);
    return max(LCSrec(a,b,i-1,j),LCSrec(a,b,i,j-1));
}
int LCStab(string a,string b){
    int n=a.size(),m=b.size(); vector<vector<int>>dp(n+1,vector<int>(m+1,0));
    for(int i=1;i<=n;i++) for(int j=1;j<=m;j++)
        dp[i][j]=(a[i-1]==b[j-1])?1+dp[i-1][j-1]:max(dp[i-1][j],dp[i][j-1]);
    return dp[n][m];
}

// 2️⃣ Longest Palindromic Substring
string longestPal(string s){
    int n=s.size(), st=0, len=1;
    vector<vector<bool>>dp(n,vector<bool>(n,0));
    for(int i=0;i<n;i++) dp[i][i]=1;
    for(int i=n-1;i>=0;i--)
        for(int j=i+1;j<n;j++)
            if(s[i]==s[j] && (j-i==1||dp[i+1][j-1]))
                dp[i][j]=1, len=max(len,j-i+1), st=i;
    return s.substr(st,len);
}

int main(){
    string a="abcde", b="ace";
    cout<<"LCS(rec):"<<LCSrec(a,b,a.size()-1,b.size()-1)<<"\n";
    cout<<"LCS(tab):"<<LCStab(a,b)<<"\n";
    cout<<"LongestPal:"<<longestPal("babad");
}
